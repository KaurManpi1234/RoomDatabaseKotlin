<!--            android:id="@+id/update_regno"-->
<!--            android:layout_width="295dp"-->
<!--            android:layout_height="54dp"-->
<!--            android:background="@color/white"-->
<!--            android:hint="ENTER YOUR ID"-->
<!--            android:inputType="number"-->
<!--            android:textSize="20dp"-->
